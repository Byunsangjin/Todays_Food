<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fragment.androidtown.org.todays_food.RegisterActivity"
    android:background="@drawable/back">

    <EditText
        android:id="@+id/idText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="153dp"
        android:ems="10"
        android:hint="아이디"
        android:inputType="textPersonName"
        android:textColorHint="#ffffffff"
        android:textColor="#ffffffff"/>

    <EditText
        android:id="@+id/passwordText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/idText"
        android:layout_alignLeft="@+id/idText"
        android:layout_alignRight="@+id/idText"
        android:layout_alignStart="@+id/idText"
        android:layout_below="@+id/idText"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:ems="10"
        android:hint="비밀번호"
        android:inputType="textPersonName"
        android:textColorHint="#ffffffff"
        android:textColor="#ffffffff"/>

    <EditText
        android:id="@+id/nameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/passwordText"
        android:layout_alignLeft="@+id/passwordText"
        android:layout_alignRight="@+id/passwordText"
        android:layout_alignStart="@+id/passwordText"
        android:layout_below="@+id/passwordText"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:ems="10"
        android:hint="이름"
        android:inputType="textPersonName"
        android:textColorHint="#ffffffff"
        android:textColor="#ffffffff"/>

    <EditText
        android:id="@+id/ageText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/nameText"
        android:layout_alignLeft="@+id/passwordText"
        android:layout_alignRight="@+id/nameText"
        android:layout_alignStart="@+id/passwordText"
        android:layout_below="@+id/nameText"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:ems="10"
        android:hint="나이"
        android:inputType="textPersonName"
        android:textColorHint="#ffffffff"
        android:textColor="#ffffffff"/>

    <ImageButton
        android:id="@+id/registerButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/ageText"
        android:src="@drawable/sign_up_button"
        android:layout_marginTop="30dp"
        android:background="#0000ff00"/>

</RelativeLayout>
